@if (WeatherModels != null)
{
    <div style="height:500px;overflow-y:scroll">
        <table class="table">
             <thead>
                    <tr>
                        <th>Date</th>
                        <th>Temp. (C)</th>
                        <th>Temp. (F)</th>
                        <th>Summary</th>
                    </tr>
             </thead>
            <Virtualize Items="@WeatherModels" Context="forecast">
                <tbody>
                    <tr>
                        <td>@forecast.Timestamp</td>
                        <td>@forecast.TemperatureC</td>
                        <td>@forecast.TemperatureF</td>
                        <td>@forecast.Summary</td>
                    </tr>
                </tbody>
                </Virtualize>
        </table>
    </div>
}
else if (WeatherProtobuf != null)
{
    <div style="height:500px;overflow-y:scroll">
        <table class="table">
             <thead>
                    <tr>
                        <th>Date</th>
                        <th>Temp. (C)</th>
                        <th>Temp. (F)</th>
                        <th>Summary</th>
                    </tr>
             </thead>
            <Virtualize Items="@WeatherProtobuf" Context="forecast">
                <tbody>
                    <tr>
                        <td>@forecast.Timestamp</td>
                        <td>@forecast.TemperatureC</td>
                        <td>@forecast.TemperatureF</td>
                        <td>@forecast.Summary</td>
                    </tr>
                </tbody>
                </Virtualize>
        </table>
    </div>
}

@code {
    [Parameter] public List<WeatherForecast>? WeatherModels {get; set;}

    [Parameter] public List<GrpcWeatherForecastProtobuf.WeatherForecastData>? WeatherProtobuf { get; set; }
}